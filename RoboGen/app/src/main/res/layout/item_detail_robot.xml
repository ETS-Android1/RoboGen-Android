<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textSize="32dp"
        android:textIsSelectable="true"
        tools:context=".ItemDetail.ItemDetailRobot" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_text_1"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textSize="20dp"
        android:textIsSelectable="true"
        tools:context=".ItemDetail.ItemDetailRobot" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/bluetooth_connect"
        app:fabSize="auto"
        app:rippleColor="@color/cardview_dark_background"
        app:backgroundTint= "@color/colorPrimary" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail_text_2"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:textSize="20dp"
        android:textIsSelectable="true"
        tools:context=".ItemDetail.ItemDetailRobot" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/bluetooth_send"
        app:fabSize="auto"
        app:rippleColor="@color/cardview_dark_background"
        app:backgroundTint= "@color/colorPrimary" />
</LinearLayout>






